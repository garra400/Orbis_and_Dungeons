Group {
  Anchor: (Width: 900, Height: 600);
  Background: #1a1a1a(0.95);
  LayoutMode: Top;
  Padding: (Full: 20);

  Label #Title {
    Text: "Select Your Race";
    Anchor: (Height: 40);
    Style: (
      FontSize: 24,
      RenderBold: true,
      TextColor: #ffffff
    );
  }

  Label #Subtitle {
    Text: "Choose a race to continue.";
    Anchor: (Height: 25);
    Style: (
      FontSize: 14,
      TextColor: #c0c0c0
    );
  }

  Group {
    Anchor: (Height: 10);
  }

  Group #Content {
    LayoutMode: Left;
    FlexWeight: 1;

    Group #RaceListPanel {
      Anchor: (Width: 280);
      LayoutMode: Top;
      Padding: (Right: 10);
    }

    Group #RaceDetailPanel {
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Full: 16);
      Background: #0f0f0f(0.85);

      Label #SelectedRaceName {
        Text: "Elf";
        Anchor: (Height: 30);
        Style: (
          FontSize: 20,
          RenderBold: true,
          TextColor: #ffffff
        );
      }

      Label #SelectedRaceTagline {
        Text: "Agile and tireless, moves like the wind.";
        Anchor: (Height: 22);
        Style: (
          FontSize: 13,
          TextColor: #c0c0c0
        );
      }

      Group {
        Anchor: (Height: 15);
      }

      Label {
        Text: "STRENGTHS";
        Anchor: (Height: 22);
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #5cc45c
        );
      }

      Label #PositiveLine1 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #c2ffc2
        );
      }

      Label #PositiveLine2 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #c2ffc2
        );
      }

      Label #PositiveLine3 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #c2ffc2
        );
      }

      Group {
        Anchor: (Height: 10);
      }

      Label {
        Text: "WEAKNESSES";
        Anchor: (Height: 22);
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #d75f5f
        );
      }

      Label #NegativeLine1 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #ffc2c2
        );
      }

      Label #NegativeLine2 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #ffc2c2
        );
      }
    }
  }

  Group {
    Anchor: (Height: 15);
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 50);

    Button #PrevPageButton {
      Anchor: (Width: 120, Height: 50);
      Padding: (Full: 10);
      Background: #3a3a3a;

      Label {
        Text: "< Previous";
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #ffffff,
          HorizontalAlignment: Center,
          VerticalAlignment: Center
        );
      }
    }

    Group {
      Anchor: (Width: 10);
    }

    Label #PageInfo {
      Text: "Page 1 / 2";
      Anchor: (Width: 100);
      Style: (
        FontSize: 14,
        TextColor: #ffffff,
        HorizontalAlignment: Center,
        VerticalAlignment: Center
      );
    }

    Group {
      Anchor: (Width: 10);
    }

    Button #NextPageButton {
      Anchor: (Width: 120, Height: 50);
      Padding: (Full: 10);
      Background: #3a3a3a;

      Label {
        Text: "Next >";
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #ffffff,
          HorizontalAlignment: Center,
          VerticalAlignment: Center
        );
      }
    }

    Group {
      Anchor: (Width: 20);
    }

    Button #ConfirmSelection {
      Anchor: (Width: 200, Height: 50);
      Padding: (Full: 12);
      Background: #2d7b4c;

      Label {
        Text: "Confirm Selection";
        Style: (
          FontSize: 16,
          RenderBold: true,
          TextColor: #ffffff,
          HorizontalAlignment: Center,
          VerticalAlignment: Center
        );
      }
    }
  }
}
