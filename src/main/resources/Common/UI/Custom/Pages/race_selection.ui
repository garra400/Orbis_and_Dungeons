Group {
  Anchor: (Width: 900, Height: 600);
  Background: #1a1a1a(0.95);
  LayoutMode: Top;
  Padding: (Full: 20);

  Label #Title {
    Text: "Selecione sua Raca";
    Anchor: (Height: 40);
    Style: (
      FontSize: 24,
      RenderBold: true,
      TextColor: #ffffff
    );
  }

  Label #Subtitle {
    Text: "Escolha uma raca para continuar.";
    Anchor: (Height: 25);
    Style: (
      FontSize: 14,
      TextColor: #c0c0c0
    );
  }

  Group {
    Anchor: (Height: 10);
  }

  Group #Content {
    LayoutMode: Left;
    FlexWeight: 1;

    Group #RaceListPanel {
      Anchor: (Width: 280);
      LayoutMode: Top;
      Padding: (Right: 10);

      Button #RaceButtonElf {
        Anchor: (Width: 280, Height: 80);
        LayoutMode: Top;
        Padding: (Full: 12);
        Background: #0f0f0f(0.9);

        Label {
          Text: "ELFO";
          Anchor: (Height: 20);
          Style: (
            FontSize: 16,
            RenderBold: true,
            TextColor: #ffffff
          );
        }

        Label {
          Text: "Agil e preciso";
          Anchor: (Height: 18);
          Style: (
            FontSize: 12,
            TextColor: #c0c0c0
          );
        }
      }

      Group {
        Anchor: (Height: 10);
      }

      Button #RaceButtonOrc {
        Anchor: (Width: 280, Height: 80);
        LayoutMode: Top;
        Padding: (Full: 12);
        Background: #0f0f0f(0.9);

        Label {
          Text: "ORC";
          Anchor: (Height: 20);
          Style: (
            FontSize: 16,
            RenderBold: true,
            TextColor: #ffffff
          );
        }

        Label {
          Text: "Forca bruta";
          Anchor: (Height: 18);
          Style: (
            FontSize: 12,
            TextColor: #c0c0c0
          );
        }
      }

      Group {
        Anchor: (Height: 10);
      }

      Button #RaceButtonHuman {
        Anchor: (Width: 280, Height: 80);
        LayoutMode: Top;
        Padding: (Full: 12);
        Background: #0f0f0f(0.9);

        Label {
          Text: "HUMANO";
          Anchor: (Height: 20);
          Style: (
            FontSize: 16,
            RenderBold: true,
            TextColor: #ffffff
          );
        }

        Label {
          Text: "Versatil e equilibrado";
          Anchor: (Height: 18);
          Style: (
            FontSize: 12,
            TextColor: #c0c0c0
          );
        }
      }
    }

    Group #RaceDetailPanel {
      FlexWeight: 1;
      LayoutMode: Top;
      Padding: (Full: 16);
      Background: #0f0f0f(0.85);

      Label #SelectedRaceName {
        Text: "Elfo";
        Anchor: (Height: 30);
        Style: (
          FontSize: 20,
          RenderBold: true,
          TextColor: #ffffff
        );
      }

      Label #SelectedRaceTagline {
        Text: "Agil e preciso, otima sinergia com arco e magia leve.";
        Anchor: (Height: 22);
        Style: (
          FontSize: 13,
          TextColor: #c0c0c0
        );
      }

      Group {
        Anchor: (Height: 15);
      }

      Label {
        Text: "POSITIVOS";
        Anchor: (Height: 22);
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #5cc45c
        );
      }

      Label #PositiveLine1 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #c2ffc2
        );
      }

      Label #PositiveLine2 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #c2ffc2
        );
      }

      Label #PositiveLine3 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #c2ffc2
        );
      }

      Group {
        Anchor: (Height: 10);
      }

      Label {
        Text: "NEGATIVOS";
        Anchor: (Height: 22);
        Style: (
          FontSize: 14,
          RenderBold: true,
          TextColor: #d75f5f
        );
      }

      Label #NegativeLine1 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #ffc2c2
        );
      }

      Label #NegativeLine2 {
        Text: "";
        Anchor: (Height: 18);
        Style: (
          FontSize: 12,
          TextColor: #ffc2c2
        );
      }
    }
  }

  Group {
    Anchor: (Height: 15);
  }

  Button #ConfirmSelection {
    Anchor: (Width: 200, Height: 50);
    Padding: (Full: 12);
    Background: #2d7b4c;

    Label {
      Text: "Confirmar Selecao";
      Style: (
        FontSize: 16,
        RenderBold: true,
        TextColor: #ffffff,
        HorizontalAlignment: Center,
        VerticalAlignment: Center
      );
    }
  }
}
